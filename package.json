{
  "name": "next-ts-eslint-prettier",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --dir src",
    "format": "prettier --write --ignore-path .gitignore './**/*.{js,jsx,ts,tsx,json,css,scss}'"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "printWidth": 100
  },
  "dependencies": {
    "@chakra-ui/react": "^2",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@fontsource/noto-sans-jp": "^5.2.5",
    "@fontsource/sriracha": "^5.2.6",
    "framer-motion": "^12.10.0",
    "next": "15.3.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.22.5",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@types/node": "22.15.12",
    "@types/react": "19.1.3",
    "eslint": "^8",
    "eslint-config-next": "15.3.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-unused-imports": "^4.1.4",
    "prettier": "^3.5.3",
    "typescript": "5.8.3"
  }
}
